<div class="tasks-item flex justify-between items-center bg-neutral-700 my-2 rounded-md p-2 w-[100%]">
    <%= task.name %>
    <div class="flex">
        <% if(task.completed){ %>
            <div class="bg-green-300py-1 px-2 rounded-md italic text-black">Completed</div>
        <% } else { %>
            <div class="bg-orange-300 py-1 px-2 rounded-md italic text-black">Pending</div>
        <% } %>
        
        <a href="/tasks/completed" + task.id class="bg-neutral-900 ml-2 hover:bg-neutral-300 px-2 pt-[2px] font-bold rounded-md italic text-red-600">Status</a>
        <a href="/tasks/remove" + task.id class="py-1 px-2 mx-2 hover:text-red-900 hover:bg-neutral-300 bg-neutral-900 rounded-md italic text-red-600">
            <i class="fa fa-trash fa-1x"></i>
        </a>
    </div>
</div>